<!doctype html>
<html lang="${lang}">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>${blog_title}</title>
    <meta name="description" content="${blog_description}">
    <meta name="author" content="${blog_author}">
    <link rel="stylesheet" href="${url_replacer('rel_path', lang, '/assets/css/main.css')}">
  </head>
  <body>
    <header class="site-header">
      <div class="container">
        <a class="logo" href="${pathto('index.html', lang)}">${blog_title}</a>
        <nav class="nav">
          <a href="${pathto('pages/home/', lang)}">Главная</a>
          <a href="${pathto('pages/report/', lang)}">Отчёт</a>
          <a href="${pathto('archive.html', lang)}">Архив</a>
        </nav>
      </div>
    </header>

    <main class="content container">
      <%block name="content"></%block>
    </main>

    <footer class="site-footer">
      <div class="container">
        <p>© ${blog_author} — Powered by Nikola</p>
      </div>
      <script src="${pathto('assets/js/main.js', lang)}"></script>
    </footer>
  </body>
  </html>


